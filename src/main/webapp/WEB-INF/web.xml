<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>PetCareReminder</display-name>

    <!-- Dashboard -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.petcare.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>

    <!-- Add Activity -->
    <servlet>
        <servlet-name>AddActivityServlet</servlet-name>
        <servlet-class>com.petcare.servlet.AddActivityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddActivityServlet</servlet-name>
        <url-pattern>/AddActivityServlet</url-pattern>
    </servlet-mapping>

    <!-- Update Activity Status -->
    <servlet>
        <servlet-name>UpdateActivityStatusServlet</servlet-name>
        <servlet-class>com.petcare.servlet.UpdateActivityStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateActivityStatusServlet</servlet-name>
        <url-pattern>/UpdateActivityStatusServlet</url-pattern>
    </servlet-mapping>

    <!-- Delete Activity -->
    <servlet>
        <servlet-name>DeleteActivityServlet</servlet-name>
        <servlet-class>com.petcare.servlet.DeleteActivityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteActivityServlet</servlet-name>
        <url-pattern>/DeleteActivityServlet</url-pattern>
    </servlet-mapping>

    <!-- Default page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
